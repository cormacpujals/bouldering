<%- include('../partials/header') %>

<h2>Welcome to Bouldering Paradise</h2>



    <div id="posts-container">
     <% posts.forEach(function(p) { %>
            <div class="posts" >
                <div style="width: 25vw; background-size: cover; background-image: url('<%= p.img %>')"></div>
                <div>
                    <h3><%= p.name %></h3>
                    <h6><%= p.grade %></h6>
                    <h6><%= p.location %></h6>
                    <h6><a href="/posts/<%= p._id %>">Read more</a></h6>
                </div>
            </div>
     <% }); %>
    </div>




<%- include('../partials/footer') %>
